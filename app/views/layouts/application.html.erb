<!DOCTYPE html>
<html>
  <head>
    <title>BooksWithFriends</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <% if logged_in? %>
  <nav class="navbar">

    <%= link_to 'Log Out', logout_path, method: :delete %>
    <%= link_to 'All Reviews', reviews_path, class: 'navlink' %>
    <%= link_to 'New Review', new_review_path, class: 'navlink' %>
    <%= link_to 'All Books', books_path, class: 'navlink' %>
    </nav>
    <% end %>

    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
