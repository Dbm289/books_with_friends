<h1><%= @review.user.username %>'s Review of <%= @review.book.title %></h1>

<ul>
    <li>Reviewer: <%= link_to @review.user.try(:username), user_path(@review.user) %></li>
    <li>Book: <%= link_to @review.book.try(:title), book_path(@review.book) %></li>
    <br>
    <br>
    <h3>Review</h3> <%= @review.try(:content) %>

<br>
<br>

<% if @review.user == current_user %>
  <%= link_to "Edit Review", edit_review_path(@review) %>

  <br>

  <%= link_to "Delete Review", review_path(@review), method: :delete  %>
  
<% end %>